{
  "build": {
    "builder": "NIXPACKS",
  "buildCommand": "cd backend && composer install --no-dev --optimize-autoloader"
  },
  "deploy": {
  "startCommand": "cd backend && apache2-foreground",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}