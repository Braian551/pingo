{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd pingo/backend && composer install --no-dev --optimize-autoloader"
  },
  "deploy": {
    "startCommand": "cd pingo/backend && apache2-foreground",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}